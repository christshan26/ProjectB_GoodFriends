@page
@model AppRazor.Pages.Friends.Detailview.ViewFriendModel
@{
}

<!-- Page view-friend -->
<div class="container px-4 py-4" id="view-group">
    <h2 class="pb-2 border-bottom">
    View details of a friend
        <a href="~/Members/EditFriend?id=@Model.Friend.FriendId">
            <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#edit" /></svg>
        </a>
    </h2>
    <form class="needs-validation" novalidate>
        <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div class="col-md-7 col-lg-10">

                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="friendName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="friendName" value="@Model.Friend.FirstName" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" value="@Model.Friend.LastName" readonly>
                    </div>

                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" value="@(Model.Friend.Address?.Country ?? "No Country")" readonly>
                    </div>
                    <div class="col-sm-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" value="@(Model.Friend.Address?.City ?? "No City")" readonly>
                    </div>
                </div>
                @if (Model.Friend.Pets != null && Model.Friend.Pets.Any())
                {
                    <div class="row g-1">
                        <h3 class="pb-2">Pets</h3>

                        <div class="row mb-2 text-center">
                            <div class="col-md-10 themed-grid-head-col">Name</div>
                            <div class="col-md-2 themed-grid-head-col">Kind</div>
                        </div>
                        @foreach (var item in Model.Friend.Pets)
                        {
                            <div class="row mb-2 text-center">
                                <div class="col-md-10 themed-grid-col">@item.Name</div>
                                <div class="col-md-2 themed-grid-col">@item.Kind</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="row g-1">
                        <h3 class="pb-2">Pets</h3>
                        <p class="text-muted">No pets registered</p>
                    </div>
                }

                @if (Model.Friend.Quotes != null && Model.Friend.Quotes.Any())
                {
                    <div class="row g-1">
                        <h3 class="pb-2">Quotes</h3>

                        <div class="row mb-2 text-center">
                            <div class="col-md-10 themed-grid-head-col">Text</div>
                            <div class="col-md-2 themed-grid-head-col">Author</div>
                        </div>
                        @foreach (var item in Model.Friend.Quotes)
                        {
                            <div class="row mb-2 text-center">
                                <div class="col-md-10 themed-grid-col">@item.QuoteText</div>
                                <div class="col-md-2 themed-grid-col">@item.Author</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="row g-1">
                        <h3 class="pb-2">Quotes</h3>
                        <p class="text-muted">No quotes registered</p>
                    </div>
                }
            </div>
        </div>
    </form>
</div>