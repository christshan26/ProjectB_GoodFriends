@page
@model AppRazor.Pages.Friends.Detailview.EditFriendModel
@{
    ViewData["Title"] = "Edit Friend";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]
<!-- Page edit-friend -->
<div class="container px-4 py-4" id="edit-friend">
    <form class="needs-validation" method="post" novalidate>
        <h2 class="pb-2 border-bottom">
            @Model.PageHeader
            <button class="btn btn-primary-outline" type="submit" asp-page-handler="Save">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#save" /></svg>
            </button>
            <button class="btn btn-primary-outline" type="submit" asp-page-handler="Undo">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#undo" /></svg>
            </button>
        </h2>

        <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div class="col-md-7 col-lg-10">

                <input asp-for="PageHeader" value="@Model.PageHeader" type="hidden" />

                @if (Model.ValidationResult.HasErrors)
                {
                    <div class="row g-3">
                        @foreach (var item in Model.ValidationResult.ErrorMsgs)
                        {
                            <span class="alert alert-danger" role="alert">
                                @item
                            </span>
                        }
                    </div>
                }

                <div class="row g-3 mb-2">

                    <input asp-for="FriendInput.FriendId" type="hidden" />
                    <input asp-for="FriendInput.StatusIM" type="hidden" />
                    <input asp-for="FriendInput.Address.AddressId" type="hidden" />
                    <input asp-for="FriendInput.Address.StatusIM" type="hidden" />

                    <div class="col-sm-6">
                        <label for="friendName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="friendName" asp-for="FriendInput.FirstName">
                        <span asp-validation-for="FriendInput.FirstName" class="invalid-feedback"></span>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" asp-for="FriendInput.LastName">
                        <span asp-validation-for="FriendInput.LastName" class="invalid-feedback"></span>
                    </div>

                    <div class="form-check mb-3 col-12">
                        <input type="checkbox" class="form-check-input" id="addAddress" asp-for="FriendInput.IsAddingAddress"/>
                        <label class="form-check-label" for="addAddress">
                            Edit Address
                        </label>
                    </div>

                    <div id="addressFields" class="row g-3" style="display: @(Model.FriendInput.IsAddingAddress ? "flex" : "none")">
                        <div class="col-sm-6">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" asp-for="FriendInput.Address.Country">
                            <span asp-validation-for="FriendInput.Address.Country" class="invalid-feedback"></span>
                        </div>

                        <div class="col-sm-6">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" asp-for="FriendInput.Address.City">
                            <span asp-validation-for="FriendInput.Address.City" class="invalid-feedback"></span>
                        </div>

                        <div class="col-sm-6">
                            <label for="street" class="form-label">Street</label>
                            <input type="text" class="form-control" id="street" asp-for="FriendInput.Address.StreetAddress">
                            <span asp-validation-for="FriendInput.Address.StreetAddress" class="invalid-feedback"></span>
                        </div>

                        <div class="col-sm-6">
                            <label for="zipCode" class="form-label">Zip Code</label>
                            <input type="number" class="form-control" id="zipCode" asp-for="FriendInput.Address.ZipCode">
                            <span asp-validation-for="FriendInput.Address.ZipCode" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-1">
                    <h3 class="pb-2">Pets</h3>

                    <input type="hidden" name="petId" data-seido-selected-item-id-target />

                    <div class="row mb-2 text-center">
                        <div class="col-md-8 themed-grid-head-col">Name</div>
                        <div class="col-md-2 themed-grid-head-col">Kind</div>
                        <div class="col-md-2 themed-grid-head-col">
                            <button class="btn btn-success btn-sm m-1" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseAddPet">
                                New
                            </button>
                        </div>
                    </div>
                    <div class="collapse row mb-2 text-center" id="collapseAddPet">
                        <div class="form-floating col-md-7 themed-grid-col">
                            <input type="text" asp-for="FriendInput.NewPet.Name" class="form-control" id="name" value="" />
                            <span asp-validation-for="FriendInput.NewPet.Name" class="invalid-feedback"></span>
                            <label for="name">Name</label>
                        </div>
                        <div class="form-floating col-md-3 themed-grid-col">
                            <select asp-for="FriendInput.NewPet.Kind" asp-items="@Model.AnimalKind" class="form-select" id="kind">
                                <option value="">Pick animal kind</option>
                            </select>
                            <span asp-validation-for="FriendInput.NewPet.Kind" class="invalid-feedback"></span>
                            <label for="kind">Kind</label>
                        </div>
                        <div class="col-md-2 themed-grid-col">
                            <button type="submit" asp-page-handler="AddPet" class="btn btn-success btn-sm m-1">
                                Ok
                            </button>
                        </div>
                    </div>

                    @for (int k = 0; k < Model.FriendInput.Pets.Count; k++)
                    {
                        <div class="row mb-2 text-center @(Model.FriendInput.Pets[k].StatusIM == AppRazor.Pages.Friends.Detailview.EditFriendModel.StatusIM.Deleted? "d-none" : null)">

                            <input asp-for="FriendInput.Pets[k].StatusIM" value="@Model.FriendInput.Pets[k].StatusIM" class="form-control" type="hidden" />
                            <input asp-for="FriendInput.Pets[k].PetId" value="@Model.FriendInput.Pets[k].PetId" class="form-control" type="hidden" />
                            <input asp-for="FriendInput.Pets[k].Name" value="@Model.FriendInput.Pets[k].Name" class="form-control" type="hidden" />
                            <input asp-for="FriendInput.Pets[k].Kind" value="@Model.FriendInput.Pets[k].Kind" class="form-control" type="hidden" />

                            <div class="col-md-8 themed-grid-col">@Model.FriendInput.Pets[k].Name</div>
                            <div class="col-md-2 themed-grid-col">@Model.FriendInput.Pets[k].Kind</div>
                            <div class="col-md-2 themed-grid-col">
                                <button class="btn btn-secondary btn-sm m-1" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#collapseEditPet_@Model.FriendInput.Pets[k].PetId"
                                        data-seido-selected-item-id="@Model.FriendInput.Pets[k].PetId">
                                    Edit
                                </button>

                                <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal" data-bs-target="#delPetModal" data-seido-modal-body="@Model.FriendInput.Pets[k].Name the @Model.FriendInput.Pets[k].Kind is about to be deleted." data-seido-selected-item-id="@Model.FriendInput.Pets[k].PetId">
                                    Del
                                </button>
                            </div>
                        </div>

                        <div class="collapse row mb-2 text-center" id="collapseEditPet_@Model.FriendInput.Pets[k].PetId">

                            <div class="form-floating col-md-8 themed-grid-col">
                                <input asp-for="FriendInput.Pets[k].editName" class="form-control" value="@Model.FriendInput.Pets[k].editName" />
                                <span asp-validation-for="FriendInput.Pets[k].editName" class="invalid-feedback"></span>
                                <label for="FriendInput.Pets[k].editName">Name</label>
                            </div>
                            <div class="form-floating col-md-2 themed-grid-col">
                                <select asp-for="FriendInput.Pets[k].editKind" asp-items="@Model.AnimalKind" class="form-select" id="kindselect">
                                    <option value="">Pick animal kind</option>
                                </select>
                                <span asp-validation-for="FriendInput.Pets[k].editKind" class="invalid-feedback"></span>
                                <label for="FriendInput.Pets[k].editKind">Kind</label>
                            </div>
                            <div class="col-md-2 themed-grid-col">
                                <button type="submit" asp-page-handler="EditPet" asp-route-petId="@Model.FriendInput.Pets[k].PetId" class="btn btn-success btn-sm m-1">
                                    Ok
                                </button>
                            </div>
                        </div>
                    }

                    <!-- Pet Delete Modal -->
                    <div class="modal fade" id="delPetModal" tabindex="-1" aria-labelledby="delPetModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title text-danger" id="delPetModalLabel">Confirm deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" id="delPetModalBody">
                                    Are you sure you want to delete this pet?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary btn-danger" asp-page-handler="DeletePets" name="petId" id="deletePetBtn">Ok</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-1">
                    <h3 class="pb-2">Quotes</h3>

                    <input type="hidden" name="quoteId" data-seido-selected-item-id-target />

                    <div class="row mb-2 text-center">
                        <div class="col-md-8 themed-grid-head-col">Text</div>
                        <div class="col-md-2 themed-grid-head-col">Author</div>
                        <div class="col-md-2 themed-grid-head-col">
                            <button class="btn btn-success btn-sm m-1" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseAddQuote">
                                New
                            </button>
                        </div>
                    </div>
                    <div class="collapse row mb-2 text-center" id="collapseAddQuote">
                        <div class="form-floating col-md-8 themed-grid-col">
                            <input type="text" asp-for="FriendInput.NewQuote.QuoteText" class="form-control" id="quoteText" value="" />
                            <span asp-validation-for="FriendInput.NewQuote.QuoteText" class="invalid-feedback"></span>
                            <label for="quoteText">Text</label>
                        </div>
                        <div class="form-floating col-md-2 themed-grid-col">
                            <input type="text" asp-for="FriendInput.NewQuote.Author" class="form-control" id="author" value="" />
                            <span asp-validation-for="FriendInput.NewQuote.Author" class="invalid-feedback"></span>
                            <label for="author">Author</label>
                        </div>
                        <div class="col-md-2 themed-grid-col">
                            <button type="submit" asp-page-handler="AddQuote" class="btn btn-success btn-sm m-1">
                                Ok
                            </button>
                        </div>
                    </div>

                    @for (int k = 0; k < Model.FriendInput.Quotes.Count; k++)
                    {
                        <div class="row mb-2 text-center @(Model.FriendInput.Quotes[k].StatusIM == AppRazor.Pages.Friends.Detailview.EditFriendModel.StatusIM.Deleted? "d-none" : null)">

                            <input asp-for="FriendInput.Quotes[k].StatusIM" value="@Model.FriendInput.Quotes[k].StatusIM" class="form-control" type="hidden" />
                            <input asp-for="FriendInput.Quotes[k].QuoteId" value="@Model.FriendInput.Quotes[k].QuoteId" class="form-control" type="hidden" />
                            <input asp-for="FriendInput.Quotes[k].QuoteText" value="@Model.FriendInput.Quotes[k].QuoteText" class="form-control" type="hidden" />
                            <input asp-for="FriendInput.Quotes[k].Author" value="@Model.FriendInput.Quotes[k].Author" class="form-control" type="hidden" />

                            <div class="col-md-8 themed-grid-col">@Model.FriendInput.Quotes[k].QuoteText</div>
                            <div class="col-md-2 themed-grid-col">@Model.FriendInput.Quotes[k].Author</div>
                            <div class="col-md-2 themed-grid-col">
                                <button class="btn btn-secondary btn-sm m-1" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#collapseEditQuote_@Model.FriendInput.Quotes[k].QuoteId"
                                        data-seido-selected-item-id="@Model.FriendInput.Quotes[k].QuoteId">
                                    Edit
                                </button>

                                <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal" data-bs-target="#delQuoteModal" data-seido-modal-body="Quote by @Model.FriendInput.Quotes[k].Author is about to be deleted." data-seido-selected-item-id="@Model.FriendInput.Quotes[k].QuoteId">
                                    Del
                                </button>
                            </div>
                        </div>

                        <div class="collapse row mb-2 text-center" id="collapseEditQuote_@Model.FriendInput.Quotes[k].QuoteId">
                            <div class="form-floating col-md-8 themed-grid-col">
                                <input asp-for="FriendInput.Quotes[k].editQuoteText" class="form-control" value="@Model.FriendInput.Quotes[k].editQuoteText" />
                                <span asp-validation-for="FriendInput.Quotes[k].editQuoteText" class="invalid-feedback"></span>
                                <label for="FriendInput.Quotes[k].editQuoteText">Text</label>
                            </div>
                            <div class="form-floating col-md-2 themed-grid-col">
                                <input asp-for="FriendInput.Quotes[k].editAuthor" class="form-control" value="@Model.FriendInput.Quotes[k].editAuthor" />
                                <span asp-validation-for="FriendInput.Quotes[k].editAuthor" class="invalid-feedback"></span>
                                <label for="FriendInput.Quotes[k].editAuthor">Author</label>
                            </div>
                            <div class="col-md-2 themed-grid-col">
                                <button type="submit" asp-page-handler="EditQuote" asp-route-quoteId="@Model.FriendInput.Quotes[k].QuoteId" class="btn btn-success btn-sm m-1">
                                    Ok
                                </button>
                            </div>
                        </div>
                    }

                    <!-- Quote Delete Modal-->
                    <div class="modal fade" id="delQuoteModal" tabindex="-1" aria-labelledby="delQuoteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title text-danger" id="delQuoteModalLabel">Confirm deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" id="delQuoteModalBody">
                                    Are you sure you want to delete this quote?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary btn-danger" asp-page-handler="DeleteQuotes" name="quoteId" id="deleteQuoteBtn">Ok</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

@section script
{
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Toggle address fields visibility based on checkbox
        document.addEventListener('DOMContentLoaded', function() 
        {
            const addAddressCheckbox = document.getElementById('addAddress');
            const addressFields = document.getElementById('addressFields');
            
            if (addAddressCheckbox && addressFields) 
            {
                addAddressCheckbox.addEventListener('change', function() 
                {
                    if (this.checked) {
                        addressFields.style.display = 'flex';
                    } else {
                        addressFields.style.display = 'none';
                    }
                });

                if (addAddressCheckbox.checked) 
                {
                    addressFields.style.display = 'flex';
                } 
                else 
                {
                    addressFields.style.display = 'none';
                }
            }
        });
    </script>
}