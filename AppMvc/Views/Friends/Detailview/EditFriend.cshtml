@model AppMvc.Models.ViewModels.Friends.EditFriendViewModel
@{
    ViewData["Title"] = "Edit Friend";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!-- Page edit-friend -->
<div class="container px-4 py-4" id="edit-friend">
    <form class="needs-validation" method="post" asp-controller="Friends" asp-action="Save" novalidate>
        <h2 class="pb-2 border-bottom">
            @Model.PageHeader
            <button class="btn btn-primary-outline" type="submit">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#save" /></svg>
            </button>
            <button class="btn btn-primary-outline" type="submit" formaction="@Url.Action("Undo", "Friends")">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#undo" /></svg>
            </button>
        </h2>

        <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div class="col-md-7 col-lg-10">

                <input asp-for="PageHeader" value="@Model.PageHeader" type="hidden" />

                @if (Model.ValidationResult.HasErrors)
                {
                    <div class="row g-3">
                        @foreach (var item in Model.ValidationResult.ErrorMsgs)
                        {
                            <span class="alert alert-danger" role="alert">
                                @item
                            </span>
                        }
                    </div>
                }

                <div class="row g-3 mb-2">

                    <input asp-for="FriendInput.FriendId" type="hidden" />
                    <input asp-for="FriendInput.StatusIM" type="hidden" />
                    <input asp-for="FriendInput.Address.AddressId" type="hidden" />
                    <input asp-for="FriendInput.Address.StatusIM" type="hidden" />

                    <div class="col-sm-6">
                        <label for="friendName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="friendName" asp-for="FriendInput.FirstName">
                        <span asp-validation-for="FriendInput.FirstName" class="invalid-feedback"></span>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" asp-for="FriendInput.LastName">
                        <span asp-validation-for="FriendInput.LastName" class="invalid-feedback"></span>
                    </div>

                    <div class="form-check mb-3 col-12">
                        <input type="checkbox" class="form-check-input" id="addAddress" asp-for="FriendInput.IsAddingAddress"/>
                        <label class="form-check-label" for="addAddress">
                            Edit Address
                        </label>
                    </div>

                    <div id="addressFields" class="row g-3" style="display: @(Model.FriendInput.IsAddingAddress ? "flex" : "none")">
                        <div class="col-sm-6">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" asp-for="FriendInput.Address.Country">
                            <span asp-validation-for="FriendInput.Address.Country" class="invalid-feedback"></span>
                        </div>

                        <div class="col-sm-6">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" asp-for="FriendInput.Address.City">
                            <span asp-validation-for="FriendInput.Address.City" class="invalid-feedback"></span>
                        </div>

                        <div class="col-sm-6">
                            <label for="street" class="form-label">Street</label>
                            <input type="text" class="form-control" id="street" asp-for="FriendInput.Address.StreetAddress">
                            <span asp-validation-for="FriendInput.Address.StreetAddress" class="invalid-feedback"></span>
                        </div>

                        <div class="col-sm-6">
                            <label for="zipCode" class="form-label">Zip Code</label>
                            <input type="number" class="form-control" id="zipCode" asp-for="FriendInput.Address.ZipCode">
                            <span asp-validation-for="FriendInput.Address.ZipCode" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h3 class="h5 mb-0 fw-bold">
                            <svg class="bi text-danger me-2" width="20" height="20"><use xlink:href="#heart-fill" /></svg>
                            Pets
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <input type="hidden" name="petId" data-seido-selected-item-id-target />

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="h6 mb-0">Manage Pets</h4>
                            <button class="btn btn-success btn-sm" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseAddPet">
                                <svg class="bi me-1" width="14" height="14"><use xlink:href="#heart-fill" /></svg>
                                Add New Pet
                            </button>
                        </div>

                        <div class="collapse mb-3" id="collapseAddPet">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-5">
                                            <label for="name" class="form-label">Name</label>
                                            <input type="text" asp-for="FriendInput.NewPet.Name" class="form-control" id="name" value="" />
                                            <span asp-validation-for="FriendInput.NewPet.Name" class="invalid-feedback"></span>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="kind" class="form-label">Kind</label>
                                            <select asp-for="FriendInput.NewPet.Kind" asp-items="@Model.AnimalKind" class="form-select" id="kind">
                                                <option value="">Pick animal kind</option>
                                            </select>
                                            <span asp-validation-for="FriendInput.NewPet.Kind" class="invalid-feedback"></span>
                                        </div>
                                        <div class="col-md-3 d-flex align-items-end">
                                            <button type="submit" formaction="@Url.Action("AddPet", "Friends")" class="btn btn-success w-100">
                                                Add Pet
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-muted">Name</th>
                                        <th scope="col" class="text-muted">Kind</th>
                                        <th scope="col" class="text-muted text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int k = 0; k < Model.FriendInput.Pets.Count; k++)
                                    {
                                        <tr class="@(Model.FriendInput.Pets[k].StatusIM == AppMvc.Models.ViewModels.Friends.EditFriendViewModel.StatusIM.Deleted? "d-none" : "")">
                                            <input asp-for="FriendInput.Pets[k].StatusIM" value="@Model.FriendInput.Pets[k].StatusIM" type="hidden" />
                                            <input asp-for="FriendInput.Pets[k].PetId" value="@Model.FriendInput.Pets[k].PetId" type="hidden" />
                                            <input asp-for="FriendInput.Pets[k].Name" value="@Model.FriendInput.Pets[k].Name" type="hidden" />
                                            <input asp-for="FriendInput.Pets[k].Kind" value="@Model.FriendInput.Pets[k].Kind" type="hidden" />
                                            
                                            <td class="fw-medium">@Model.FriendInput.Pets[k].Name</td>
                                            <td><span class="badge bg-secondary">@Model.FriendInput.Pets[k].Kind</span></td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary me-1" type="button"
                                                        data-bs-toggle="collapse" data-bs-target="#collapseEditPet_@Model.FriendInput.Pets[k].PetId"
                                                        data-seido-selected-item-id="@Model.FriendInput.Pets[k].PetId">
                                                    <svg class="bi" width="14" height="14"><use xlink:href="#edit" /></svg>
                                                    Edit
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delPetModal" 
                                                        data-seido-modal-body="@Model.FriendInput.Pets[k].Name the @Model.FriendInput.Pets[k].Kind is about to be deleted." 
                                                        data-seido-selected-item-id="@Model.FriendInput.Pets[k].PetId">
                                                    <svg class="bi" width="14" height="14"><use xlink:href="#undo" /></svg>
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="collapseEditPet_@Model.FriendInput.Pets[k].PetId">
                                            <td colspan="3">
                                                <div class="card bg-light border-0">
                                                    <div class="card-body">
                                                        <div class="row g-3">
                                                            <div class="col-md-5">
                                                                <label for="FriendInput.Pets[k].editName" class="form-label">Name</label>
                                                                <input asp-for="FriendInput.Pets[k].editName" class="form-control" value="@Model.FriendInput.Pets[k].editName" />
                                                                <span asp-validation-for="FriendInput.Pets[k].editName" class="invalid-feedback"></span>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label for="FriendInput.Pets[k].editKind" class="form-label">Kind</label>
                                                                <select asp-for="FriendInput.Pets[k].editKind" asp-items="@Model.AnimalKind" class="form-select">
                                                                    <option value="">Pick animal kind</option>
                                                                </select>
                                                                <span asp-validation-for="FriendInput.Pets[k].editKind" class="invalid-feedback"></span>
                                                            </div>
                                                            <div class="col-md-3 d-flex align-items-end">
                                                                <button type="submit" formaction="@Url.Action("EditPet", "Friends", new { petId = Model.FriendInput.Pets[k].PetId })" class="btn btn-success w-100">
                                                                    Save
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h3 class="h5 mb-0 fw-bold">
                            <svg class="bi text-info me-2" width="20" height="20"><use xlink:href="#chat-square-quote-fill" /></svg>
                            Quotes
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <input type="hidden" name="quoteId" data-seido-selected-item-id-target />

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="h6 mb-0">Manage Quotes</h4>
                            <button class="btn btn-success btn-sm" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseAddQuote">
                                <svg class="bi me-1" width="14" height="14"><use xlink:href="#chat-square-quote-fill" /></svg>
                                Add New Quote
                            </button>
                        </div>

                        <div class="collapse mb-3" id="collapseAddQuote">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-7">
                                            <label for="quoteText" class="form-label">Quote Text</label>
                                            <input type="text" asp-for="FriendInput.NewQuote.QuoteText" class="form-control" id="quoteText" value="" />
                                            <span asp-validation-for="FriendInput.NewQuote.QuoteText" class="invalid-feedback"></span>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="author" class="form-label">Author</label>
                                            <input type="text" asp-for="FriendInput.NewQuote.Author" class="form-control" id="author" value="" />
                                            <span asp-validation-for="FriendInput.NewQuote.Author" class="invalid-feedback"></span>
                                        </div>
                                        <div class="col-md-2 d-flex align-items-end">
                                            <button type="submit" formaction="@Url.Action("AddQuote", "Friends")" class="btn btn-success w-100">
                                                Add Quote
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-muted">Quote</th>
                                        <th scope="col" class="text-muted">Author</th>
                                        <th scope="col" class="text-muted text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int k = 0; k < Model.FriendInput.Quotes.Count; k++)
                                    {
                                        <tr class="@(Model.FriendInput.Quotes[k].StatusIM == AppMvc.Models.ViewModels.Friends.EditFriendViewModel.StatusIM.Deleted? "d-none" : "")">
                                            <input asp-for="FriendInput.Quotes[k].StatusIM" value="@Model.FriendInput.Quotes[k].StatusIM" type="hidden" />
                                            <input asp-for="FriendInput.Quotes[k].QuoteId" value="@Model.FriendInput.Quotes[k].QuoteId" type="hidden" />
                                            <input asp-for="FriendInput.Quotes[k].QuoteText" value="@Model.FriendInput.Quotes[k].QuoteText" type="hidden" />
                                            <input asp-for="FriendInput.Quotes[k].Author" value="@Model.FriendInput.Quotes[k].Author" type="hidden" />
                                            
                                            <td class="fst-italic">"@Model.FriendInput.Quotes[k].QuoteText"</td>
                                            <td class="fw-medium">@Model.FriendInput.Quotes[k].Author</td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary me-1" type="button"
                                                        data-bs-toggle="collapse" data-bs-target="#collapseEditQuote_@Model.FriendInput.Quotes[k].QuoteId"
                                                        data-seido-selected-item-id="@Model.FriendInput.Quotes[k].QuoteId">
                                                    <svg class="bi" width="14" height="14"><use xlink:href="#edit" /></svg>
                                                    Edit
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delQuoteModal" 
                                                        data-seido-modal-body="Quote by @Model.FriendInput.Quotes[k].Author is about to be deleted." 
                                                        data-seido-selected-item-id="@Model.FriendInput.Quotes[k].QuoteId">
                                                    <svg class="bi" width="14" height="14"><use xlink:href="#undo" /></svg>
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="collapseEditQuote_@Model.FriendInput.Quotes[k].QuoteId">
                                            <td colspan="3">
                                                <div class="card bg-light border-0">
                                                    <div class="card-body">
                                                        <div class="row g-3">
                                                            <div class="col-md-7">
                                                                <label for="FriendInput.Quotes[k].editQuoteText" class="form-label">Quote Text</label>
                                                                <input asp-for="FriendInput.Quotes[k].editQuoteText" class="form-control" value="@Model.FriendInput.Quotes[k].editQuoteText" />
                                                                <span asp-validation-for="FriendInput.Quotes[k].editQuoteText" class="invalid-feedback"></span>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label for="FriendInput.Quotes[k].editAuthor" class="form-label">Author</label>
                                                                <input asp-for="FriendInput.Quotes[k].editAuthor" class="form-control" value="@Model.FriendInput.Quotes[k].editAuthor" />
                                                                <span asp-validation-for="FriendInput.Quotes[k].editAuthor" class="invalid-feedback"></span>
                                                            </div>
                                                            <div class="col-md-2 d-flex align-items-end">
                                                                <button type="submit" formaction="@Url.Action("EditQuote", "Friends", new { quoteId = Model.FriendInput.Quotes[k].QuoteId })" class="btn btn-success w-100">
                                                                    Save
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Pet Delete Modal -->
        <div class="modal fade" id="delPetModal" tabindex="-1" aria-labelledby="delPetModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow">
                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title text-danger fw-bold" id="delPetModalLabel">
                            <svg class="bi me-2" width="20" height="20"><use xlink:href="#undo" /></svg>
                            Confirm Pet Deletion
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body py-4" id="delPetModalBody">
                        Are you sure you want to delete this pet?
                    </div>
                    <div class="modal-footer border-0 pt-0">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger" formaction="@Url.Action("DeletePet", "Friends")" name="petId" id="deletePetBtn">
                            <svg class="bi me-1" width="14" height="14"><use xlink:href="#undo" /></svg>
                            Delete Pet
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quote Delete Modal -->
        <div class="modal fade" id="delQuoteModal" tabindex="-1" aria-labelledby="delQuoteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow">
                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title text-danger fw-bold" id="delQuoteModalLabel">
                            <svg class="bi me-2" width="20" height="20"><use xlink:href="#undo" /></svg>
                            Confirm Quote Deletion
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body py-4" id="delQuoteModalBody">
                        Are you sure you want to delete this quote?
                    </div>
                    <div class="modal-footer border-0 pt-0">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger" formaction="@Url.Action("DeleteQuote", "Friends")" name="quoteId" id="deleteQuoteBtn">
                            <svg class="bi me-1" width="14" height="14"><use xlink:href="#undo" /></svg>
                            Delete Quote
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section script
{
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Toggle address fields visibility based on checkbox
        document.addEventListener('DOMContentLoaded', function() 
        {
            const addAddressCheckbox = document.getElementById('addAddress');
            const addressFields = document.getElementById('addressFields');
            
            if (addAddressCheckbox && addressFields) 
            {
                addAddressCheckbox.addEventListener('change', function() 
                {
                    if (this.checked) {
                        addressFields.style.display = 'flex';
                    } else {
                        addressFields.style.display = 'none';
                    }
                });

                if (addAddressCheckbox.checked) 
                {
                    addressFields.style.display = 'flex';
                } 
                else 
                {
                    addressFields.style.display = 'none';
                }
            }
        });
    </script>
}