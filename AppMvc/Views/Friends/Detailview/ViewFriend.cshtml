@model AppMvc.Models.ViewModels.Friends.FriendsDetailsViewModel
@{
    ViewData["Title"] = "Friend Details";
}

<!-- Page view-friend -->
<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-2 text-primary fw-bold">Friend Details</h1>
            <p class="text-muted mb-0">View comprehensive information about this friend</p>
        </div>
        <a asp-controller="Friends" asp-action="Edit" asp-route-id="@Model.Friend.FriendId" class="btn btn-primary">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#edit" /></svg>
            Edit Friend
        </a>
    </div>
</section>
<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h3 class="h5 mb-0 fw-bold">
                    <svg class="bi text-primary me-2" width="20" height="20"><use xlink:href="#person-raised-hand" /></svg>
                    Personal Information
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="friendName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="friendName" value="@Model.Friend.FirstName" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" value="@Model.Friend.LastName" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" value="@(Model.Friend.Address?.Country ?? "No Country")" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" value="@(Model.Friend.Address?.City ?? "No City")" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="street" class="form-label">Street</label>
                        <input type="text" class="form-control" id="street" value="@(Model.Friend.Address?.StreetAddress ?? "No Street")" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="zipCode" class="form-label">Zip Code</label>
                        <input type="text" class="form-control" id="zipCode" value="@(Model.Friend.Address?.ZipCode ?? 0)" readonly>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h3 class="h5 mb-0 fw-bold">
                    <svg class="bi text-danger me-2" width="20" height="20"><use xlink:href="#heart-fill" /></svg>
                    Pets
                </h3>
            </div>
            <div class="card-body p-4">
                @if (Model.Friend.Pets != null && Model.Friend.Pets.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-muted">Name</th>
                                    <th scope="col" class="text-muted">Kind</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Friend.Pets)
                                {
                                    <tr>
                                        <td class="fw-medium">@item.Name</td>
                                        <td><span class="badge bg-secondary">@item.Kind</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <svg class="bi text-muted mb-3" width="48" height="48"><use xlink:href="#heart-fill" /></svg>
                        <p class="text-muted mb-0">No pets registered</p>
                    </div>
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h3 class="h5 mb-0 fw-bold">
                    <svg class="bi text-info me-2" width="20" height="20"><use xlink:href="#chat-square-quote-fill" /></svg>
                    Quotes
                </h3>
            </div>
            <div class="card-body p-4">
                @if (Model.Friend.Quotes != null && Model.Friend.Quotes.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-muted">Quote</th>
                                    <th scope="col" class="text-muted">Author</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Friend.Quotes)
                                {
                                    <tr>
                                        <td class="fst-italic">"@item.QuoteText"</td>
                                        <td class="fw-medium">@item.Author</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <svg class="bi text-muted mb-3" width="48" height="48"><use xlink:href="#chat-square-quote-fill" /></svg>
                        <p class="text-muted mb-0">No quotes registered</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
            <div class="card-body p-4">
                <h4 class="h6 text-muted text-uppercase mb-3">Quick Actions</h4>
                <div class="d-grid gap-2">
                    <a asp-controller="Friends" asp-action="Edit" asp-route-id="@Model.Friend.FriendId" class="btn btn-primary">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#edit" /></svg>
                        Edit Friend
                    </a>
                    <a asp-controller="Friends" asp-action="List" class="btn btn-outline-secondary">
                        Back to List
                    </a>
                </div>
                <hr class="my-4">
                <h4 class="h6 text-muted text-uppercase mb-3">Summary</h4>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Pets:</span>
                    <span class="fw-bold">@(Model.Friend.Pets?.Count ?? 0)</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Quotes:</span>
                    <span class="fw-bold">@(Model.Friend.Quotes?.Count ?? 0)</span>
                </div>
            </div>
        </div>
    </div>
</div>