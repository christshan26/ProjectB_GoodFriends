<!DOCTYPE html>
@using Configuration.Options
@using Microsoft.AspNetCore.Identity;
@using Microsoft.Extensions.Options
@using Models;
@using Configuration;
@inject IConfiguration configuration;
@inject IOptions<EnvironmentOptions> envOptions;

@{}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Friends Database Management - Manage your friends, pets, addresses, and quotes">
    <title>@ViewData["Title"] - GoodFriends</title>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppMvc.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap/navbars-offcanvas.css" rel="stylesheet">
    <link href="~/css/bootstrap/features.css" rel="stylesheet">
    <link href="~/css/bootstrap/grid.css" rel="stylesheet">
    <link href="~/css/bootstrap/sign-in.css" rel="stylesheet">
    <link href="~/css/bootstrap/modals.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="visually-hidden-focusable position-absolute top-0 start-0 p-2 bg-primary text-white text-decoration-none">
        Skip to main content
    </a>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm" aria-label="Main navigation">
            <div class="container-fluid px-3 px-lg-4">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg class="bi me-2" width="24" height="24">
                        <use xlink:href="#person-raised-hand" />
                    </svg>
                    GoodFriends
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">
                                <svg class="bi me-1" width="16" height="16">
                                    <use xlink:href="#home" />
                                </svg>
                                Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle btn btn-link" id="friendsDropdown" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Friends
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="friendsDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Friends" asp-action="Overview">
                                        Friends Overview
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Friends" asp-action="FriendsAndPetsOverview">
                                        Friends & Pets Overview
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Friends" asp-action="List">
                                        Friends List
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Seed">
                                Admin
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content Area -->
    <main id="main-content" class="flex-grow-1" role="main">
        <div class="container-fluid px-3 px-lg-4 py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light border-top mt-auto" role="contentinfo">
        <div class="container-fluid px-3 px-lg-4">
            <div class="row py-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5 class="text-primary fw-bold">GoodFriends</h5>
                    <p class="text-muted small mb-0">
                        Manage your friends, pets, addresses, and quotes with ease.
                    </p>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6 class="text-uppercase fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-muted text-decoration-none" asp-area="" asp-controller="Friends" asp-action="Overview">Friends</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="text-uppercase fw-bold mb-3">About</h6>
                    <p class="text-muted small">
                        Created by Christoffer Hansson<br>
                        &copy; 2025 All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

